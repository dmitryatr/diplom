@using Diplom.Models
@model RegisterViewModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="label">Регистрация</h4>
        </div>
        <div class="modal-body">
            <div class="form-group row">
                @Html.LabelFor(m => m.Name, new { @class = "col-3 col-form-label" })
                <div class="col-9">
                    @Html.EditorFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Email, new { @class = "col-3 col-form-label" })
                <div class="col-9">
                    @Html.EditorFor(m => m.Email)
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Password, new { @class = "col-3 col-form-label" })
                <div class="col-9">
                    @Html.EditorFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-3 col-form-label" })
                <div class="col-9">
                    @Html.EditorFor(m => m.ConfirmPassword)
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.City, new { @class = "col-3 col-form-label" })
                <div class="col-9">
                    @Html.EditorFor(m => m.City)
                    @Html.ValidationMessageFor(m => m.City)
                </div>
            </div>
        </div>     
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary waves-effect" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-info waves-effect waves-light">Save changes</button>
        </div>
    </div>
}


